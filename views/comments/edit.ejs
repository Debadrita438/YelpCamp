<!-- Header goes here -->
<% include ../partials/header %>

<!-- The contents -->
<div class="row justify-content-center">
	<div class="col-md-12 text-center mb-4">
		<h1>Edit Comment</h1>
	</div>    
	<div class="col-xs-4 col-md-6 col-lg-4">
		<form action="/campgrounds/<%= campground_id %>/comments/<%=comment._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" value="<%=comment.text %>" name="comment[text]" placeholder="text">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">Submit!</button>
			</div>
		</form>
		<a class="btn btn-default" href="/campgrounds/<%= campground_id %>"><i class="fas fa-arrow-left"></i> Go Back</a>
	</div>
</div>

<!-- Footers goes here -->
<% include ../partials/footer %>